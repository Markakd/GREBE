prog kernel &Kernel(kernarg_u64 %input[4], kernarg_u64 %output_ptr, kernarg_u64 %i)
{
	ld_kernarg_u64 $d0, [%i];
	ld_kernarg_u64 $d0, [%input][$d0 + 1];

	ld_kernarg_u64 $d1, [%output_ptr];
	st_global_u64 $d0, [$d1];

	ret;
};

